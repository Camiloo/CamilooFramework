<layout>
    <adminhtml_user_edit>
        <reference name="content">
            <block type="adminhtml/user_edit" name="user_edit"></block>
        </reference>
        <reference name="head">
            <block type="adminhtml/template" name="optional_zip_countries" as="optional_zip_countries" template="directory/js/optional_zip_countries.phtml" />
            <action method="addJs"><file>mage/adminhtml/product/composite/configure.js</file></action>
            <action method="addJs"><file>varien/configurable.js</file></action>
        </reference>
        <reference name="left">
            <block type="adminhtml/user_edit_tabs" name="user_edit_tabs">
                <block type="adminhtml/user_edit_tab_view" name="user_edit_tab_view" template="user/tab/view.phtml">
                    <!-- <block type="adminhtml/user_edit_tab_view_sales" name="sales" template="user/tab/view/sales.phtml" before="-" />
                    <block type="adminhtml/user_edit_tab_view_accordion" name="accordion" /> -->
                </block>
                <action method="addTab"><name>user_edit_tab_view</name><block>user_edit_tab_view</block></action>
            </block>
        </reference>
        <reference name="js">
            <block type="adminhtml/template" template="user/edit/js.phtml" name="user.edit.js" as="user_edit_js"></block>
        </reference>
    </adminhtml_user_edit>
    <adminhtml_user_group_index>
        <reference name="content">
            <block type="adminhtml/user_group" name="user_group"></block>
        </reference>
    </adminhtml_user_group_index>
    <adminhtml_user_wishlist>
        <block type="adminhtml/user_edit_tab_wishlist" name="user.wishlist.edit.tab" output="toHtml" />
    </adminhtml_user_wishlist>
</layout>
